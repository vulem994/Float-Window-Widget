<Window x:Class="VM_Wpf_NetCore_Ourapp.MainWindow"
         xmlns:local="clr-namespace:VM_Wpf_NetCore_Ourapp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:VM_Wpf_NetCore_Ourapp.Converters"
        Title="Circle"
        Width="250"
        Height="150"
        AllowsTransparency="True"
        Background="Transparent"      
        ShowInTaskbar="False"
        WindowStyle="None"
        Deactivated="Window_Deactivated"
        MouseDown="Window_MouseDown"
        MouseDoubleClick="Window_MouseDoubleClick"
        Focusable="False">
    
    <Window.Resources>
        <converters:Bitmap2BitmapImage_WpfConverter x:Key="bitmap2bitmapImage_converter"></converters:Bitmap2BitmapImage_WpfConverter>
    </Window.Resources>
    <Grid x:Name="grid_main">

        <Image Source="{Binding bmp,Converter={StaticResource bitmap2bitmapImage_converter}}" />

        <TextBlock Background="White"  HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding selectedText}"/>

        <Button x:Name="button_minimize" Content="x" Click="button_minimize_Click" 
                VerticalAlignment="Top" HorizontalAlignment="Right"
                MinHeight="20" MinWidth="20" Margin="5" />
    </Grid>
</Window>
